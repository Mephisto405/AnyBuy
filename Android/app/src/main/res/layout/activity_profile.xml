<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayoutID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity">


    <ImageView
        android:id="@+id/productImageViewID"
        android:layout_width="62dp"
        android:layout_height="66dp"
        app:layout_constraintEnd_toEndOf="@+id/ordersButtonID"
        app:layout_constraintStart_toStartOf="@+id/ordersButtonID"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        tools:layout_editor_absoluteY="63dp" />

    <Button
        android:id="@+id/ordersButtonID"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_background"
        android:text="Orders"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/sellhistoryID"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/sellhistoryID"
        app:layout_constraintTop_toBottomOf="@+id/productImageViewID" />

    <Button
        android:id="@+id/sellhistoryID"
        android:layout_width="192dp"
        android:layout_height="48dp"

        android:background="@drawable/button_background"
        android:text="Seller History"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/PaymentButtonID"
        app:layout_constraintStart_toStartOf="@+id/PaymentButtonID"
        tools:layout_editor_absoluteY="223dp" />

    <Button
        android:id="@+id/PaymentButtonID"

        android:layout_width="192dp"
        android:layout_height="48dp"


        android:background="@drawable/button_background"
        android:text="Payment"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/AddressButtonID"
        app:layout_constraintStart_toStartOf="@+id/AddressButtonID"
        tools:layout_editor_absoluteY="281dp" />

    <Button
        android:id="@+id/preferenceButtonID"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Preference"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/legalButtonID"
        app:layout_constraintStart_toStartOf="@+id/legalButtonID"
        tools:layout_editor_absoluteY="397dp" />


    <Button
        android:id="@+id/legalButtonID"
        android:layout_width="192dp"
        android:layout_height="wrap_content"

        android:background="@drawable/button_background"
        android:text="Legal"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="455dp" />

    <Button
        android:id="@+id/AddressButtonID"

        android:layout_width="192dp"
        android:layout_height="48dp"


        android:background="@drawable/button_background"
        android:text="Address"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/preferenceButtonID"
        app:layout_constraintStart_toStartOf="@+id/preferenceButtonID"
        tools:layout_editor_absoluteY="339dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</android.support.constraint.ConstraintLayout>