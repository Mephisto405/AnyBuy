<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayoutID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <Button
        android:id="@+id/sellhistoryID"
        android:layout_width="@android:dimen/thumbnail_height"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Seller History"
        app:layout_constraintBottom_toTopOf="@+id/informationButtonID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ordersButtonID" />

    <Button
        android:id="@+id/ordersButtonID"
        android:layout_width="@android:dimen/thumbnail_height"
        android:layout_height="wrap_content"


        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"


        android:layout_marginTop="32dp"

        android:text="Orders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/informationButtonID"


        android:layout_marginBottom="20dp"

        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp"


        android:layout_width="192dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:text="Information"
        app:layout_constraintBottom_toTopOf="@+id/preferenceButtonID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sellhistoryID" />

    <Button
        android:id="@+id/preferenceButtonID"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Prefrence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/informationButtonID" />

    <Button
        android:id="@+id/legalButtonID"
        android:layout_width="192dp"

        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Legal"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/preferenceButtonID" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="62dp"
        android:layout_height="66dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="161dp"
        android:layout_marginLeft="161dp"
        android:layout_marginRight="161dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="56dp"
        app:layout_constraintBottom_toTopOf="@+id/ordersButtonID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        app:layout_constraintTop_toBottomOf="@+id/preferenceButtonID" />

</android.support.constraint.ConstraintLayout>